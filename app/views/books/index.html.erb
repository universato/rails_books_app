<h1>書籍</h1>

<%= page_entries_info @books %>

<br />

<%= paginate @books %>

<br />

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>メモ</th>
      <th>著者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= link_to '詳細画面へ', book %></td>
        <td><%= link_to '編集画面へ', edit_book_path(book) %></td>
        <td><%= link_to '削除する', book, method: :delete, data: { confirm: '本当に削除しますか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to '新規作成画面へ', new_book_path %>
